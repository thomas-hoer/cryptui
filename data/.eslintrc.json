{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "import/no-absolute-path": "off"
    },
    "globals": {
        "decryptToString": "readonly",
        "decryptToBase64": "readonly",
        "encryptString": "readonly",
        "encrypt": "readonly",
        "createKey": "readonly",
        "encryptAES": "readonly",
        "decryptAES": "readonly",
        "signFile": "readonly"
    }
}
